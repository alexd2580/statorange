{
  "cooldown" : 5,

  "Battery" : {
    "battery_file" : "/sys/class/power_supply/BAT0/uevent"
  },
  "CPU" : {
    "temperature_file" : "/sys/bus/acpi/devices/LNXTHERM:00/thermal_zone/temp",
    "load_file" : "/proc/loadavg"
  },
  "Volume" : {
    "deprecated_get_volume" : "amixer get Master"
  },
  "GMail" : {
      "ca_file" : "/usr/share/ca-certificates/mozilla/GeoTrust_Global_CA.crt",
      "you_can_also_specify" : "ca_path",
      "hostname" : "imap.gmail.com",
      "port" : 993
  },

  "order" : [
    {
      "item" : "GMail",
      "cooldown" : 900,
      "button" : "chromium www.gmail.com",
      "username" : "your_mail@gmail.com",
      "password" : "your_password",
      "mailbox" : "INBOX"
    },
    {
      "item" : "Volume",
      "cooldown" : 300,
      "button" : "terminator -e alsamixer &",
      "card" : "default",
      "mixer" : "Master"
    },
    {
      "item" : "Net",
      "cooldown" : 10,
      "interface" : "wlp2s0",
      "type" : "wireless",
      "show" : "ipv4"
    },
    {
      "item" : "Net",
      "cooldown" : 10,
      "interface" : "enp0s25",
      "type" : "ethernet",
      "show" : "ipv4"
    },
    {
      "item" : "Battery",
      "cooldown" : 15
    },
    {
      "item" : "CPU",
      "cooldown" : 5,
      "button" : "terminator -e htop &"
    },
    {
      "item" : "Space",
      "cooldown" : 30,
      "mount_points" : ["/", "/home"]
    },
    {
      "item" : "Date",
      "cooldown" : 30,
      "format" : "%Y-%m-%d %H:%M"
    }
  ]
}
