{
    "log file path": "/dev/null",
    "cooldown": 5,
    "ws window names" : "active",
    "can also be" : "none, all, visible (btw the impl is missing)",
    "order": [
        {
            "item": "IMAPMail",
            "cooldown": 900,
            "button": "chromium www.gmail.com &",
            "icon": "mail",
            "hostname": "imap.gmail.com",
            "port": 993,
            "ca_file": "/etc/ca-certificates/extracted/cadir/GeoTrust_Global_CA.pem",
            "username": "<username>",
            "password": "<password>",
            "mailbox": "INBOX",
            "tag": "GMail"
        },
        {
            "item": "Volume",
            "cooldown": 30,
            "button": "terminator -e alsamixer &",
            "show_failed": false,
            "icon": "vol",
            "card": "default",
            "mixer": "Master"
        },
        {
            "item": "Net",
            "cooldown": 10,
            "icon": "wlan",
            "interface": "wlp2s0",
            "type": "wireless",
            "show": "ipv4"
        },
        {
            "item": "Net",
            "cooldown": 10,
            "interface": "enp0s25",
            "type": "ethernet",
            "show": "ipv4"
        },
        {
            "item": "Battery",
            "cooldown": 15,
            "battery_file": "/sys/class/power_supply/BAT0/uevent"
        },
        {
            "item": "CPU",
            "cooldown": 5,
            "button": "terminator -e htop &",
            "icon": "cpu",
            "temperature_files": [
                "/sys/bus/acpi/devices/LNXTHERM:00/thermal_zone/temp",
                "/sys/bus/acpi/devices/LNXTHERM:01/thermal_zone/temp"
            ],
            "load_file": "/proc/loadavg"
        },
        {
            "item": "Space",
            "cooldown": 30,
            "mount_points": [
                {
                    "file": "/",
                    "icon": "hd"
                },
                {
                    "file": "/home",
                    "icon": "home"
                }
            ]
        },
        {
            "item": "Date",
            "cooldown": 30,
            "icon": "clock",
            "format": "%Y-%m-%d %H:%M"
        }
    ]
}
